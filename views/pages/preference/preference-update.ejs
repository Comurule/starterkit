<!--begin::Modal-->

	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<form class="kt-form kt-form--label-right" id="kt_form_1" onsubmit="updatePreference(event, <%= preference[0].id %>)">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Update Preference Center Form</h5>
				</div>
				<div class="modal-body">
					<div class="form-group form-group-last kt-hide">
						<div class="alert alert-danger" role="alert" id="kt_form_1_msg">
							<div class="alert-icon"><i class="flaticon-warning"></i></div>
							<div class="alert-text">
							</div>
						</div>
					</div>
					<div class="row">
						<div class="form-group col-6">
							<label>Name:</label>
							<input type="text" class="form-control" name="name" value="<%= preference[0].name%>" placeholder="Financial Preference">
						</div>
					
						<div class="form-group col-2">
							<label>Code:</label>
							<div class="input-group">
								<div class="input-group-prepend"><span class="input-group-text" id="basic-addon1">pc </span></div>														
								<input type="number" class="form-control" name="pcCode" value="<%= preference[0].pcCode%>" placeholder="01">
							</div>
						</div>
						<div class="form-group col-2">
							<label>Tier:</label>
							<div class="input-group">
								<div class="input-group-prepend"><span class="input-group-text" id="basic-addon1">Tier </span></div>														
								<input type="number" class="form-control" name="tier" value="<%= preference[0].tier%>" placeholder="1">
							</div>
						</div>
					</div>
					<div>
						<div class="row">
							<div class="form-group col-xl-4 col-lg-4 col-sm-12">
								<label class="">Display Type:</label>
								<div class="">
								<select class="form-control kt-select2" id="kt_select2_1" name="displayType">
							
									<option value="">Select An Option</option>
									<option value="Discover And Learn" <% if (preference[0].displayType ==='Discover And Learn') { %>selected<% }else{ %>''<% } %>>Discover And Learn</option>
									<option value="Entity" <% if(preference[0].displayType ==='Entity') { %>selected<% }else{ %>''<% } %>>Entity</option>
									<option value="Preference Center" <% if(preference[0].displayType ==='Preference Center'){ %>selected<% }else{ %>''<% } %>>Preference Center</option>
									</select>
								</div>
							</div>
							<div class="form-group col-xl-6 col-lg-6 col-sm-12">
								<label class="">Parent Preference Center:</label>
								<div class="">
								<select class="form-control kt-select2" id="kt_select2_0" name="parentPC">
									<option value="">Select An Option</option>
								</select>
								</div>
							</div>
						</div>
					</div>
					<div class="kt-form__actions">
						<button type="submit" class="btn btn-brand">Submit</button>
						<button type="reset" class="btn btn-secondary" data-toggle="modal" data-target="#company_modal">Cancel</button>
					</div>                                                                                                                                            
				</div>
			</form>
		</div>
	</div>

<!--end::Modal-->
<script src="assets/js/preference/preference_update.js" type="text/javascript"></script>